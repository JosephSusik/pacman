<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.pacman.controller.LoadReplayController"
      style="-fx-background-color: black; -fx-font-family: Pixel Emulator;"
>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button text="Select replay" fx:id="btn_selectReplay"/>
    <Label fx:id="label" style="-fx-text-fill: white"/>

    <Button text="Start replay" fx:id="btn_startReplay"/>
    <Label fx:id="Replay_label" style="-fx-text-fill: white"/>

    <Button text="Back" fx:id="btn_back"/>

</VBox>
